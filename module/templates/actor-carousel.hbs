<div class="main-part">
    {{#if crawlStarted}}
    <div class="side-buttons">
        <ol>
            <li class="small" data-action="rollAllInit" data-tooltip="Roll All Initiatives">
                <i class="fas fa-dice-d20"></i>
            </li>
            <li class="small" data-action="previousRound" data-tooltip="Previous Round">
                <i class="fas fa-angles-left"></i>
            </li>
            <li data-action="previousTurn" data-tooltip="Previous Turn">
                <i class="fas fa-angle-left"></i>
            </li>
        </ol>
    </div>
    {{> combatant}}
    <div class="side-buttons">
        <ol>
            <li class="small" data-action="resetInit" data-tooltip="Reset All Initiative">
                <i class="fas fa-eraser"></i>
            </li>
            <li class="small" data-action="nextRound" data-tooltip="Next Round">
                <i class="fas fa-angles-right"></i>
            </li>
            <li data-action="nextTurn" data-tooltip="Next Turn">
                <i class="fas fa-angle-right"></i>
            </li>
        </ol>
    </div>
    {{/if}}
</div>